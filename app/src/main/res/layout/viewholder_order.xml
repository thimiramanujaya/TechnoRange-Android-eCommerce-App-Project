<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="#989898"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/order_imgv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/baseline_image_24"
            android:scaleType="centerInside"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingStart="5dp">

            <TextView
                android:id="@+id/order_title_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20sp"
                android:fontFamily="@font/productsansregular"
                android:text="Title of the Product "
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/order_qty_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20sp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/productsansregular"
                android:text="Quantity : X"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="20sp"
                android:layout_marginBottom="10dp"
                android:weightSum="100">

                <TextView
                    android:id="@+id/order_state_txt"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/productsansregular"
                    android:text="Order State"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/order_more_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="More"
                    android:textColor="@color/teal_200"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:fontFamily="@font/productsansregular"
                    android:textAllCaps="false"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#6200EA"
                    android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
                    android:drawableTint="@color/teal_200"/>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>