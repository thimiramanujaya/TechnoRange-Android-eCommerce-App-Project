<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="256dp"
    android:layout_height="144dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/banner_imgv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/banner_img_1"/>

        <TextView
            android:id="@+id/banner_heading_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/banner_heading_one"
            android:fontFamily="@font/productsansregular"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:shadowDx="3"
            android:shadowRadius="6"
            android:shadowColor="@color/black"
            android:layout_margin="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/banner_descript_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprodisplay"
            android:shadowColor="@color/black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:text="@string/banner_descript_one"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>